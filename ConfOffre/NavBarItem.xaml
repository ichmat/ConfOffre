<UserControl x:Class="ConfOffre.NavBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfOffre"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#EEE" x:Name="MainBorder" Height="50" Width="200">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image Margin="8" Source="Images/cart.png"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="icon" />
            <TextBlock x:Name="TB_Title" Text="#TITLE" Margin="5,0,0,0" FontSize="15" Grid.Column="1" VerticalAlignment="Center" />
        </Grid>
    </Border>
</UserControl>
