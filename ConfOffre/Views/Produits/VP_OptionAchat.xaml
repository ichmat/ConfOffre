<UserControl x:Class="ConfOffre.Views.Produits.VP_OptionAchat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfOffre.Views.Produits"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="300" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="15" FontWeight="Bold" x:Name="TB_OptionAchat_Nom" Text="#TITLE" HorizontalAlignment="Center" Foreground="{StaticResource main_blue}" />
        <TextBlock Grid.Row="1" TextWrapping="WrapWithOverflow"  FontSize="10" x:Name="TB_OptionAchat_Desc" Text="#DESCRIPTION" HorizontalAlignment="Left" Foreground="{StaticResource main_blue}" Opacity="0.8" />
        <Border Padding="5,5" Grid.Row="2" CornerRadius="5" BorderThickness="2" BorderBrush="{StaticResource main_blue}">
            <StackPanel x:Name="SP_Conf">
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
